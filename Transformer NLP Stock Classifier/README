# install 정리내용
pip install yfinance             0.2.43
pip install tensorflow           2.10.0
pip install transformers         4.44.2


# Query
CREATE TABLE TB_STOCK_KRNEWS_PREDICT(
		GSTC_CODE			VARCHAR(20)		NOT NULL
	,	INVEST_CODE			VARCHAR(2)		NOT NULL
	,	PREDICT_RISE_RATE	VARCHAR(30)		NOT NULL
	,	PREDICT_FALL_RATE	VARCHAR(30)		NOT NULL
	,	PREDICT_TIME		DATETIME		NOT NULL
);
ALTER TABLE TB_STOCK_KRNEWS_PREDICT
ADD CONSTRAINT TB_STOCK_KRNEWS_PREDICT_GSTC_CODE_FK
FOREIGN KEY (GSTC_CODE)
REFERENCES TB_STOCKCLASSIFY(GSTC_CODE)
;
ALTER TABLE TB_STOCK_KRNEWS_PREDICT
ADD CONSTRAINT TB_STOCK_KRNEWS_PREDICT_INVEST_CODE_FK
FOREIGN KEY (INVEST_CODE)
REFERENCES TB_STOCKCLASSIFY(INVEST_CODE)
;






